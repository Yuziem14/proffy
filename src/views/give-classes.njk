{% from 'layouts/partials/_select.njk' import select as Select %}
{% extends 'layouts/master.njk' %}
{% set pageId = 'page-give-classes' %}
{% set pageTitle = 'Dar aulas' %}
{% set showHeader = true %}

{% block styles %}
  <link rel="stylesheet" href="/styles/partials/header.css"/>
  <link rel="stylesheet" href="/styles/partials/forms.css"/>
  <link rel="stylesheet" href="/styles/partials/custom-select.css"/>
  <link rel="stylesheet" href="/styles/partials/page-give-classes.css"/>
{% endblock styles %}

{% block scripts %}
  <script src="/scripts/customSelect.js" defer="defer"></script>
  <script src="/scripts/addField.js" defer="defer"></script>
{% endblock scripts %}

{% block headerContent %}
  <strong>Que incrível que você quer dar aulas</strong>
  <p>O primeiro passo é preencher esse formulário de inscrição</p>
{% endblock headerContent %}

{% block content %}
  <main>
    <form action="/save-classes" method="POST" id="create-class">
      <fieldset>
        <legend>Seus dados</legend>
        <div class="input-block">
          <label for="name">Nome completo</label>
          <input type="text" name="name" id="name" required="required"/>
        </div>
        <div class="input-block">
          <label for="avatar">
            Link da sua foto
            <small>(comece com https://)</small>
          </label>
          <input type="url" name="avatar" id="avatar" required="required"/>
        </div>
        <div class="input-block">
          <label for="phone_number">WhatsApp</label>
          <input type="number" name="phone_number" id="phone_number" required="required"/>
        </div>
        <div class="textarea-block">
          <label for="bio">Biografia</label>
          <textarea name="bio" id="bio" required="required"></textarea>
        </div>
      </fieldset>

      <fieldset>
        <legend>Sobre a aula</legend>
        <div class="select-block">
          <label for="subject">Matéria</label>
          {{ Select('subject', '', '', subjects) }}
        </div>
        <div class="input-block">
          <label for="cost">
            Custo da sua hora/aula
            <small>(R$)</small>
          </label>
          <input type="number" name="cost" id="cost" required="required"/>
        </div>
      </fieldset>

      <fieldset id="schedule-items">
        <legend>
          Horários disponíveis
          <button id="add-time" type="button">+ Novo Horário</button>
        </legend>
        <div class="schedule-item">
          <div class="select-block">
            <label for="weekday">Dia da semana</label>
            {{ Select('weekday[]', '', '', weekdays) }}
          </div>

          <div class="input-block">
            <label for="time_from">Das</label>
            <input type="time" name="time_from[]" id="time_from" required="required"/>
          </div>

          <div class="input-block">
            <label for="time_to">Até</label>
            <input type="time" name="time_to[]" id="time_to" required="required"/>
          </div>
        </div>
      </fieldset>
    </form>

    <footer>
      <div>
        <img src="/images/icons/warning.svg" alt="Aviso importante"/>
        <div>
          <p>
            Importante!
            <p>Preencha todos os dados</p>
          </p>
        </div>
      </div>

      <button type="submit" form="create-class">Salvar cadastro</button>
    </footer>
  </main>
{% endblock content %}